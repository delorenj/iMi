# iMi MCP Server Configuration
# Copy to .env and customize as needed

# Path to iMi CLI binary (default: searches PATH)
IMI_MCP_IMI_BINARY_PATH=imi

# Command timeout in seconds (default: 30, max: 600)
IMI_MCP_TIMEOUT_SECONDS=30

# Logging level (DEBUG, INFO, WARNING, ERROR)
IMI_MCP_LOG_LEVEL=INFO

# Optional: Path to TOML config file
# IMI_MCP_CONFIG_FILE=~/.config/iMi/mcp-server.toml
